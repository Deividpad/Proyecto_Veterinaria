<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>controllers.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CitasController</servlet-name>
        <servlet-class>controllers.CitasController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PropietarioController</servlet-name>
        <servlet-class>controllers.PropietarioController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PersonasController</servlet-name>
        <servlet-class>controllers.PersonasController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MascotasController</servlet-name>
        <servlet-class>controllers.MascotasController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MedicamentosController</servlet-name>
        <servlet-class>controllers.MedicamentosController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/LoginController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CitasController</servlet-name>
        <url-pattern>/CitasController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PropietarioController</servlet-name>
        <url-pattern>/PropietarioController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PersonasController</servlet-name>
        <url-pattern>/PersonasController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MascotasController</servlet-name>
        <url-pattern>/MascotasController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MedicamentosController</servlet-name>
        <url-pattern>/MedicamentosController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
